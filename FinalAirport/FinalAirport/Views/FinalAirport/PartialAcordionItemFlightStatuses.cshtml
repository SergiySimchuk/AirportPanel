<div class="accordion-item text-light">
    <h2 class="accordion-header" id="flush-headingFour">
        <button class="accordion-button collapsed text-light" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
            Flight statuses
        </button>
    </h2>
    <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionStaffPage">

        <br />
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#flightStatus-add-edit-modal">
            Add new flight status
        </button>
        <br />

    <div class="modal fade bg-dark" id="flightStatus-add-edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Fill the flight status fields</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row" hidden>
                        <div class="col-md-4">
                            <span>ID</span>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control flightStatus-id" disabled />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <span>Name</span>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control flightStatus-name" onkeypress="" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <span>Seconds to</span>
                        </div>
                        <div class="col-md-8">
                            <input type="number" class="form-control flightStatus-secondsTo" onkeypress="" />
                        </div>
                    </div>
                    <br/>
                     <div class="row">
                        <div class="col-md-4">
                            <span>Related to</span>
                        </div>
                        <div class="col-md-8">
                            <span>
                                <select class="form-select flightStatus-relatedTo" aria-label="Default select example" >
                                    <option selected value="false" >Departure</option>
                                    <option value="true" >Arrival</option>
                                </select>
                            </span>
                        </div>
                    </div>
                    <br/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="save-gate" data-bs-dismiss="modal" onclick="saveFlightStatus()">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="accordion-body">
        <div id="flightStatusesTable" class="content"></div>
    </div>
    </div>
</div>